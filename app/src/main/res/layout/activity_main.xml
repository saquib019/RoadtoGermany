<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@drawable/germany1" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorLightGreen"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                > </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight=".25"
    android:orientation="vertical"
    >
                <TextView
                    android:id="@+id/myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Sheikh Anika"
                />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject: Molecular Life Science"
            android:layout_toEndOf="@+id/myname"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: Bangladesh"
        android:layout_toEndOf="@+id/myname"
        />


</LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Yout Profile"
                android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/disPic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:elevation="5dp"
            android:src="@drawable/logo2"
            android:visibility="visible" />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight=".25">
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGreen"
        android:textColor="@color/colorWhite"
        android:text="Application process"
        android:layout_margin="2dp"
        android:textSize="12dp"

       />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="Journey to Deutschland"
                    android:background="@color/colorBlack"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="First Few Weeks"
                        android:layout_margin="2dp"
                        android:background="@color/colorBlack"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        >
            <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:text="Current Student"
                android:background="@color/colorBlack"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                        />
                    </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainMenuItems_RV">


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/learnGermanBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightYellow"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"

        android:textAlignment="center"
        android:text="Learn Your Essential German" />

    <Button
        android:id="@+id/messengerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:text="Join the Messenger Community" />
</LinearLayout>



